				dailyPointsTtl = ttlMorningPoints + ttlMiddayPoints + ttlEveningPoints;
				trace("assignDailyACs:  updated dailyPointsTtl to " + dailyPointsTtl);

				calculateWeeklyRemaining();
			}

			///////////////////////////////////////////////////////////////////

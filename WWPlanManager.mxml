			public function activitySumFunction(col:mx.controls.dataGridClasses.DataGridColumn):String
			{
				var n:int = activityDataAC.length;
				var total:Number = 0;
				for (var i:int = 0; i < n; i++)
				{
					total += activityDataAC[i][col.dataField];
				}
				return "Total:  " + total;
			}

		]]>
